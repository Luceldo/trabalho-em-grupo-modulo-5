<!-- Cabeçalho da página -->
 <header class="masthead" style="background-image: url('/assets/img/about-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                 <div class="site-heading">
                    <h1>Painel</h1>
                    <span class="subheading">Escreva e poste notícias de qualquer lugar.</span>
                 </div>
            </div>
        </div>
    </div>
</header>
<!-- Conteúdo da página-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <a href="/noticias/painel">Voltar</a><br><br><br><br>
            <h2>Edição de Notícias:</h2>
            <br>
            <form action="/noticias/editar" method="POST">
                <input type="hidden" name="id" value={{noticia.id}}>
                <div class="form-control">
                    <label for="title">Título:</label>
                    <input  class="input-group input-group-lg" type="text" name="titulo" placeholder="Digite o título" value="{{noticia.titulo}}">
                    <hr class="my-4" />
                    <label for="titulo">Subtítulo:</label>
                    <input  class="input-group input-group-lg" type="text" name="subtitulo" placeholder="Digite o subtítulo" value="{{noticia.subtitulo}}">
                    <hr class="my-4" />
                    <label for="noticia">Notícia:</label>
                    <textarea  class="input-group input-group-lg" style="height: 300px" type="text" name="noticia" placeholder="Digite a notícia"  value="{{noticia.noticia}}"></textarea>
                    <hr class="my-4" />
                </div>
                <br>
                <input type="submit" class="login100-form-btn" value="Editar"><br>
            </form>
        </div>    
     </div>           
</div>



